<Window x:Class="WorldCupWPF.Views.TeamInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Info"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding TeamName}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" />

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <UniformGrid Columns="2" Rows="5" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,20">
                <TextBlock Text="FIFA Code:" FontWeight="Bold" />
                <TextBlock Text="{Binding FifaCode}" />

                <TextBlock Text="Games Played:" FontWeight="Bold" />
                <TextBlock Text="{Binding GamesPlayed}" />

                <TextBlock Text="Wins:" FontWeight="Bold" />
                <TextBlock Text="{Binding Wins}" />

                <TextBlock Text="Losses:" FontWeight="Bold" />
                <TextBlock Text="{Binding Losses}" />

                <TextBlock Text="Draws:" FontWeight="Bold" />
                <TextBlock Text="{Binding Draws}" />

                <TextBlock Text="Goals For:" FontWeight="Bold" />
                <TextBlock Text="{Binding GoalsFor}" />

                <TextBlock Text="Goals Against:" FontWeight="Bold" />
                <TextBlock Text="{Binding GoalsAgainst}" />

                <TextBlock Text="Goal Difference:" FontWeight="Bold" />
                <TextBlock Text="{Binding GoalDifference}" />
                <Button Content="Close"
                    Width="100"
                    HorizontalAlignment="Center"
                    Click="Close_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
