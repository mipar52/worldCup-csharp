<Window x:Class="WorldCupWPF.Views.StartupWindow"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       xmlns:vm="clr-namespace:WorldCupWPF.ViewModels"  
       Title="Startup" Height="400" Width="500"  
       WindowStartupLocation="CenterScreen"  
       KeyDown="Window_KeyDown">  

   <Window.DataContext>  
       <vm:StartupViewModel/>  
   </Window.DataContext>  

   <Grid Margin="20">  
       <Grid.RowDefinitions>  
           <RowDefinition Height="Auto"/>  
           <RowDefinition Height="Auto"/>  
           <RowDefinition Height="Auto"/>  
           <RowDefinition Height="*"/>  
       </Grid.RowDefinitions>  

       <!-- Language -->  
       <StackPanel Margin="0 0 0 20">  
           <TextBlock Text="Language:" FontWeight="Bold"/>  
           <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}" />  
       </StackPanel>  

       <!-- Championship -->  
       <StackPanel Grid.Row="1" Margin="0 0 0 20">  
           <TextBlock Text="Championship:" FontWeight="Bold"/>  
           <ComboBox ItemsSource="{Binding Championships}" SelectedItem="{Binding SelectedChampionship}" />  
       </StackPanel>  

       <!-- Resolution -->  
       <StackPanel Grid.Row="2" Margin="0 0 0 20">  
           <TextBlock Text="Display Mode:" FontWeight="Bold"/>  
           <ComboBox ItemsSource="{Binding DisplayModes}" SelectedItem="{Binding SelectedDisplayMode}" />  
       </StackPanel>  

       <!-- Buttons -->  
       <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">  
           <Button Content="Cancel" Width="80" Margin="0 0 10 0" Command="{Binding CancelCommand}" />  
           <Button Content="Confirm" Width="80" Command="{Binding ConfirmCommand}" />  
       </StackPanel>  
   </Grid>  
</Window>
